<h1>Articles#show</h1>
<h2><%= @article.title %></h2>
<p><%= @article.content %></p>
<%= link_to articles_path do %>
<i class="fas fa-arrow-left"> Back</i>
<% end %>
<%= link_to edit_article_path do %>
<i class="fas fa-marker"> Edit</i>
<% end %>
<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
<i class="fas fa-marker"> Delete</i>
<% end %>
